<h1>id: <%= @category.id %> の物品カテゴリ名編集</h1>

<div class="container">
  <%= form_for @category, html: {class: 'form-horizontal'} do |f| %>
    <div class="form-group">
      <%= f.label :name, 'カテゴリ名', class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: 'form-control', placeholder: 'カテゴリ名' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10"  %>
        <%= f.submit '更新', class: 'btn btn-default' %>
      </div>
    </div>
  <% end %>
</div>

<%= link_to 'カテゴリ一覧に戻る', categories_path, class: 'btn btn-default pull-right' %>
