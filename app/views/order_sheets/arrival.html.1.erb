<h1>入荷処理</h1>

<%= render 'note_arrival' %>

<%= form_tag(arrival_path, method: 'POST', class: 'form-horizontal') do %>

  <div class="form-group">
    <%= label_tag :order_date, '発注日', class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= date_field_tag :order_date, @order_sheet.order_date, {class: 'form-control', readonly: true} %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :code, '発注書番号', class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= text_field_tag :code, class: 'form-control', placeholder: '発注書番号' %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :vendor_id, '発注先', class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= select_tag :vendor_id, [ @order_sheet.vendor_id, @order_sheet.vendor.name ], {class: 'form-control', readonly: true} %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :user_id, '発注者', class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= select_tag :user_id, [ @order_sheet.user_id, @order_sheet.user.name ], {class: 'form-control', readonly: true} %>
    </div>
  </div>

  <table class="table table-hover">
    <thead>
  		<tr>
  			<th>物品名</th>
  			<th>発注数</th>
  			<th>入荷予定日</th>
  			<th>進行状況</th>
      </tr>
  	</thead>
	  <tbody>
      <% @order_sheet.orders.each do |order| %>
        <%= f.fields_for :orders, order do |o|%> 
  	      <tr>
            <td><%= o.collection_select :item_id, Item.where(vendor_id: @order_sheet.vendor_id), :id, :name, {}, class: 'form-control' %></td>
            <td><div class="input-group"><%= o.number_field :number, class: 'form-control' %><span class="input-group-addon"><%= order.item.unit if order.item %></span></div></td>
            <td><%= o.date_field :arrival_date, class: 'form-control' %></td>
            <td><%= o.select :status, Order.status_attributes, {},class: 'form-control' %></td>
            <td><%= o.check_box :_destroy %><%= o.label :_destroy, "削除" %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <%= f.submit '物品行を追加', class: 'btn btn-default' %>
  <%= f.submit '更新', class: 'btn btn-primary' %>
<% end %>

<%= link_to '発注書一覧に戻る', order_sheets_path, class: 'btn btn-default pull-right' %>
